        </helpers>
        <resources>
            <parassood_abandonedcart_setup>
                <setup>
                    <module>Parassood_Abandonedcart</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </parassood_abandonedcart_setup>
